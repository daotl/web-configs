{
  "$schema": "./node_modules/biome/configuration_schema.json",
  "files": {
    "ignore": ["dist"]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true,
        "noUselessFragments": "error"
      },
      "correctness": {
        "recommended": true,
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      },
      "performance": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "noShoutyConstants": "error",
        "useBlockStatements": "error",
        "useFragmentSyntax": "error",
        "useShorthandArrayType": "error"
      },
      "suspicious": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
